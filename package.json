{
  "name": "adonisjs-livewire",
  "description": "A front-end framework for AdonisJS",
  "version": "0.15.1",
  "main": "build/providers/livewire_provider.js",
  "type": "module",
  "files": [
    "build",
    "LICENSE.md",
    "README.md",
    "package.json"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services": "./build/services/main.js",
    "./services/*": "./build/services/*.js",
    "./livewire_provider": "./build/providers/livewire_provider.js",
    "./view_provider": "./build/providers/view_provider.js",
    "./commands": "./build/commands/main.js",
    "./commands/*": "./build/commands/*.js",
    "./factories": "./build/factories/main.js",
    "./factories/*": "./build/factories/*.js",
    "./plugins/japa/api_client": "./build/src/plugins/japa/api_client.js",
    "./plugins/japa/testing": "./build/src/plugins/japa/testing.js",
    "./decorators": "./build/src/decorators/index.js"
  },
  "scripts": {
    "test": "cross-env NODE_DEBUG=adonisjs:livewire c8 npm run quick:test",
    "build": "npm run clean && npm run build-only && npm run copyfiles",
    "copyfiles": "copyfiles assets/**/* build && copyfiles \"stubs/**/*.stub\" build",
    "build-only": "tsc && npm run index:commands",
    "clean": "rimraf build",
    "prepublishOnly": "npm run build",
    "index:commands": "adonis-kit index build/commands",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=ts-node-maintained/register/esm --enable-source-maps --experimental-import-meta-resolve bin/test.ts --force-exit"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.19.3",
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/http-server": "^7.6.0",
    "@adonisjs/lucid": "^21.8.2",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.2.1",
    "@japa/assert": "^4.2.0",
    "@japa/expect-type": "^2.0.4",
    "@japa/file-system": "^3.0.0",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^5.0.0",
    "@japa/snapshot": "^2.0.10",
    "@swc/core": "1.11.13",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.3",
    "@vinejs/vine": "^3.0.1",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "del-cli": "^5.1.0",
    "edge.js": "^6.2.1",
    "eslint": "^8.56.0",
    "get-port": "^7.1.0",
    "prettier": "^3.2.4",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^3.0.2",
    "ts-node-maintained": "^10.9.6",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@poppinss/macroable": "^1.1.0",
    "@poppinss/utils": "^6.9.2",
    "edge-parser": "^9.0.4",
    "edge-tags": "^0.0.5",
    "luxon": "^3.6.1"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.2",
    "@adonisjs/http-server": "^7.0.2",
    "@adonisjs/lucid": "^21.2.0",
    "@adonisjs/session": "^7.1.1",
    "@adonisjs/shield": "^8.1.0",
    "@vinejs/vine": "^3.0.0",
    "edge.js": "^6.2.1"
  },
  "author": "Georges KABBOUCHI <georges.kabbouchi@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/KABBOUCHI/adonisjs-livewire",
  "keywords": [
    "adonisjs",
    "livewire",
    "components"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config"
}
